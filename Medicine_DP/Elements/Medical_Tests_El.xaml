<UserControl x:Class="Medicine_DP.Elements.Medical_Tests_El"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Medicine_DP.Elements"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF1E88E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FFE53935"/>
        </Style>
    </UserControl.Resources>

    <Border Background="#FFF5F5F5" CornerRadius="10" Padding="15"
            BorderBrush="#FFE0E0E0" BorderThickness="1"
            Effect="{StaticResource ShadowEffect}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <!-- Разделитель -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка - основная информация -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Медицинский анализ" 
                               FontSize="18" FontWeight="SemiBold" 
                               Margin="0,0,0,15" Foreground="#FF333333"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="ID анализа:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbTestId" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Название:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbTestName" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Категория:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbCategory" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Цена:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbPrice" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Разделитель -->
            <Rectangle Grid.Column="1" Fill="#FFEEEEEE" Width="1" HorizontalAlignment="Center"/>

            <!-- Правая колонка - детали анализа -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Детали анализа" 
                               FontSize="18" FontWeight="SemiBold" 
                               Margin="0,0,0,15" Foreground="#FF333333"/>

                    <StackPanel Orientation="Vertical" Margin="0,5">
                        <TextBlock Text="Описание:" Foreground="#FF666666"/>
                        <TextBox x:Name="tbDescription" FontWeight="SemiBold" 
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 BorderThickness="0" Background="Transparent"
                                 IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,5">
                        <TextBlock Text="Подготовка:" Foreground="#FF666666"/>
                        <TextBox x:Name="tbPreparation" FontWeight="SemiBold" 
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 BorderThickness="0" Background="Transparent"
                                 IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,5">
                        <TextBlock Text="Норма:" Foreground="#FF666666"/>
                        <TextBox x:Name="tbNormalValues" FontWeight="SemiBold" 
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 BorderThickness="0" Background="Transparent"
                                 IsReadOnly="True"/>


                    </StackPanel>
                    <!-- Панель действий -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button x:Name="btnEdit" Content="Редактировать" Width="120" Margin="0,0,10,0"
Style="{StaticResource ActionButtonStyle}" Click="btnEdit_Click"/>
                        <Button x:Name="btnDelete" Content="Удалить" Width="120"
Style="{StaticResource DangerButtonStyle}" Click="btnDelete_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
