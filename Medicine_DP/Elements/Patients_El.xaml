<UserControl x:Class="Medicine_DP.Elements.Patients_El"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Medicine_DP.Elements"
             mc:Ignorable="d">
    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
        
    </UserControl.Resources>

    <Border Background="#FFF5F5F5" CornerRadius="10" Padding="15"
            BorderBrush="#FFE0E0E0" BorderThickness="1"
            Effect="{StaticResource ShadowEffect}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка - персональная информация -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Пациент" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#FF333333"/>
                        <!--<Image Width="20" Height="20" Margin="5,0,0,0"
                               Source="{Binding gender, Converter={StaticResource GenderIconConverter}}"/>-->
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="ФИО:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbFullName" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Дата рождения:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbBirthDate" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Телефон:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbPhone" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Email:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbEmail" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Адрес:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbAddress" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Разделитель -->
            <Rectangle Grid.Column="1" Fill="#FFEEEEEE" Width="1" HorizontalAlignment="Center"/>

            <!-- Правая колонка - документы и доп. информация -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Документы и информация" 
                               FontSize="18" FontWeight="SemiBold" 
                               Margin="0,0,0,15" Foreground="#FF333333"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Паспорт:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbPassport" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="СНИЛС:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbSnils" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Полис:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbPolicy" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Дата регистрации:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbRegDate" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,5">
                        <TextBlock Text="Примечания:" Foreground="#FF666666"/>
                        <TextBox x:Name="tbNotes" FontWeight="SemiBold" 
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 BorderThickness="0" Background="Transparent"
                                 IsReadOnly="True"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
