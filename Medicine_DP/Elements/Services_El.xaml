<UserControl x:Class="Medicine_DP.Elements.Services_El"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Medicine_DP.Elements"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
        
    </UserControl.Resources>

    <Border Background="#FFF5F5F5" CornerRadius="10" Padding="15"
            BorderBrush="#FFE0E0E0" BorderThickness="1"
            Effect="{StaticResource ShadowEffect}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка - основная информация -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Медицинская услуга" 
                               FontSize="18" FontWeight="SemiBold" 
                               Margin="0,0,0,15" Foreground="#FF333333"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="ID услуги:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbServiceId" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Название:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbServiceName" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Категория:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbCategory" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Цена:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lbPrice" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Разделитель -->
            <Rectangle Grid.Column="1" Fill="#FFEEEEEE" Width="1" HorizontalAlignment="Center"/>

            <!-- Правая колонка - детали услуги -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Детали услуги" 
                               FontSize="18" FontWeight="SemiBold" 
                               Margin="0,0,0,15" Foreground="#FF333333"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Статус:" Width="120" Foreground="#FF666666"/>
                        <!--<Border CornerRadius="4" Padding="3,1" 
                                Background="{Binding is_active, Converter={StaticResource ActiveStatusConverter}}">
                        </Border>-->
                            <TextBlock x:Name="lbActiveStatus" FontWeight="SemiBold" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,5">
                        <TextBlock Text="Описание:" Foreground="#FF666666"/>
                        <TextBox x:Name="tbDescription" FontWeight="SemiBold" 
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 BorderThickness="0" Background="Transparent"
                                 IsReadOnly="True"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
