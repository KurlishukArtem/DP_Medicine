<UserControl x:Class="Medicine_DP.Elements.appointments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Medicine_DP.Elements"
             mc:Ignorable="d" > 
    <UserControl.Resources>
        <!-- Эффект тени --> 
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>

        <!-- Конвертер для цвета статуса -->
        <!--<local:StatusToColorConverter x:Key="StatusColorConverter"/>-->
    </UserControl.Resources>
    <Border Background="#FFF5F5F5" CornerRadius="10" Padding="15"
        BorderBrush="#FFE0E0E0" BorderThickness="1"
        Effect="{StaticResource ShadowEffect}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <!-- Разделитель -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Информация о записи" 
                           FontSize="18" FontWeight="SemiBold" 
                           Margin="0,0,0,15" Foreground="#FF333333"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="ID:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lb_appointments" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Пациент:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lb_patient_id" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Сотрудник:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lb_employeess" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Услуга:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lb_service_id" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Кабинет:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lb_room_id" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Разделитель -->
            <Rectangle Grid.Column="1" Fill="#FFEEEEEE" Width="1" HorizontalAlignment="Center"/>

            <!-- Правая колонка -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Детали записи" 
                           FontSize="18" FontWeight="SemiBold" 
                           Margin="0,0,0,15" Foreground="#FF333333"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Дата:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lb_appointment_date" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Время:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lb_start_time" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Статус:" Width="120" Foreground="#FF666666"/>
                        <Border CornerRadius="4" Padding="3,1" Background="{Binding StatusColor}">
                            <TextBlock x:Name="lb_status" FontWeight="SemiBold" Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Заметки:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lb_notes" FontWeight="SemiBold" TextWrapping="Wrap" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Создано:" Width="120" Foreground="#FF666666"/>
                        <TextBlock x:Name="lb_created_at" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
